#include <stdio.h>
int
main ()
{
  int m1, m2, m3, m4;
  float a;
  char grade;
  printf ("enter the marks:-");
  scanf ("%d  %d %d %d", &m1, &m2, &m3, &m4);
  a = (m1 + m2 + m3 + m4) / 4;
  printf ("\naverage is:==%f", a);

  if (a > 90)
    {
      grade = 'A';
    }
  else if (75 < a < 90)
    {
      grade = 'B';
    }
  else if (60 < a < 75)
    {
      grade = 'C';
    }
  else if (35 < a < 60)
    {
      grade = 'D';
    }
  else
    {
      grade = 'F';
    }
  switch (grade)
  {
    case 'A':
        printf ("\ncongratulations you have scored A/B");
        break;
    case 'B':
        printf ("\ncongratulations you have scored A/B");
        break;
    case 'C':
        printf ("\nGood you have scored C/D");
        break;
    case 'D':
        printf ("\nGood you have scored C/D");
        break;
    case 'F':
        printf ("\nBetter luck next time");
        break;
  return 0;
  }

}
